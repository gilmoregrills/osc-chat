{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/ts",
    "rootDir": "./",
    "resolveJsonModule": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": [
    "src/**/*.ts",
    "lib/**/*.ts",
    "bin/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
